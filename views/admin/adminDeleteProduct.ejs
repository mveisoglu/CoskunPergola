
   

          <div id="urunsil" className="row shadow">
            <h5 class="text-center  btn-outline-primary d-flex align-items-center justify-content-center">ÜRÜN SİL</h5>
            <main role="main" className="col bg-white mt-3 p-3">
              <table class="table">
                <caption>Ürün Listesi</caption>
                <thead>
                  <tr>

                    <th scope="col-sm-1">Başlık</th>
                    <th scope="col-sm-1">İçerik</th>
                    <th scope="col-sm-1">Proje Tipi</th>
                    <th scope="col-sm-1">Proje Yeri</th>
                    <th scope="col-sm-1">Müşteri</th>
                    <th scope="col-sm-1">Resim 1</th>
                    <th scope="col-sm-1">Resim 2</th>
                    <th scope="col-sm-1">Resim 3</th>
                    <th scope="col-sm-1">Resim 4</th>
                    <th scope="col-sm-1">Resim 5</th>
                    <th scope="col-sm-1">Resim 6</th>
                  </tr>
                </thead>


                <form action="<%=api_sil%>" method="POST">
                <% data.forEach(function(item){ %>


                <tbody>

                      <tr>

                        <td  ><%=item.title %></td>
                        <td  ><%=item.content %></td>
                        <td ><%=item.projeTipi %></td>
                        <td ><%=item.projeYeri %></td>
                        <td ><%=item.musteri %></td>
                        <td  style="max-width: 15px;" class="overflow-auto"><%=item.resimler.bir %></td>
                        <td style="max-width: 15px" class="overflow-auto"><%=item.resimler.iki %></td>
                        <td style="max-width: 15px" class="overflow-auto"><%=item.resimler.uc %></td>
                        <td style="max-width: 15px" class="overflow-auto"><%=item.resimler.dort %></td>
                        <td style="max-width: 15px" class="overflow-auto"><%=item.resimler.bes %></td>
                        <td style="max-width: 15px" class="overflow-auto"><%=item.resimler.alti %></td>
                        <td>
                          <button
                            onClick=""
                            id=""
                            value="<%=item._id %>"
                            name="id"
                            type="submit"
                            class="btn btn-danger"
                          >
                            Sil
                          </button>

                        </td>
                      </tr>

                </tbody>
                <% }) %>
              </form>
              </table>
            </main>
          </div>
        </div>
      </div>