<section id="projeler" class="plans bg-secondary">
  <div class="section-header"><h2>Projeler</h2></div>

  <div class="tab-content" id="pills-plan">
    <div
      class="tab-pane fade show active"
      id="pills-apartman-plan"
      role="tabpanel"
    >
      <div class="row g-3">
        <% data.forEach(function(item){ %>
        <div
          style="max-width: 200px"
          class="
            col-sm-4
            shadow
            rounded
            border
            d-flex
            flex-wrap
            align-items-center
            justify-content-center
            py-2
            px-2
            my-2
            mx-4
          "
        >
          <!-- Button trigger modal -->

          <button type="button" data-bs-toggle="modal" data-bs-target="#deneme">
            <div
              class="
                d-flex
                flex-column
                align-items-center
                justify-content-center
                hepsi
              "
              data-title="<%=item.title%>"
              data-description="<%=item.content%>"
              data-musteri="<%=item.musteri%>"
              data-projeyeri="<%=item.projeYeri%>"
              data-projetipi="<%=item.projeTipi%>"
              data-resim1="<%=item.resimler.bir%>"
              data-resim2="<%=item.resimler.iki%>"
              data-resim3="<%=item.resimler.uc%>"
              data-resim4="<%=item.resimler.dort%>"
            >
              <img
                src="<%=item.resimler.bir%>"
                alt="Rolling Roof"
                class="rounded shadow firstpicture"
                style="max-height: 200px; max-width: 150px"
              />
              <div class="my-2 h5 w-75"><%=item.title%></div>
            </div>
          </button>
        </div>
        <!-- Modal -->
        <% }) %>
        <div
          class="modal fade"
          id="deneme"
          data-bs-backdrop="static"
          data-bs-keyboard="false"
          tabindex="-1"
          aria-labelledby="staticBackdropLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content" style="max-height: 70vh">
              <div class="modal-header">
                <button
                  type="button"
                  class="btn-close bg-white kapat"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body d-flex align-items-center">
                <div class="">
                  <div class="row">
                    <div
                      class="
                        col-md-4
                        d-flex
                        justify-content-center
                        align-items-center
                      "
                    >
                      <img
                        src="1"
                        alt="Bioclimatic Pergola"
                        class="büyükresim img-thumbnail"
                        id="onbes"
                      />
                    </div>

                    <div class="col-md-4 pt">
                      <div class="col-sm-12">
                        <strong
                          id="title"
                          class="text-center d-flex justify-content-center"
                        >
                        </strong>
                        <p class="mt-5 icerik-yazi text-muted">
                          İÇERİK :
                          <span class="text-white mx-3" id="content"></span>
                        </p>

                        <p class="mt-3 icerik-yazi text-muted">
                          PROJE YERİ:
                          <span class="text-white mx-3" id="projeyeri"> </span>
                        </p>

                        <p class="mt-3 icerik-yazi text-muted">
                          PROJE TİPİ:
                          <span class="text-white mx-3" id="projetipi"></span>
                        </p>

                        <p class="mt-3 icerik-yazi text-muted">
                          MÜŞTERİ:
                          <span class="h5 text-white mx-3" id="musteri"></span>
                        </p>

                        <div class="col-sm-12">
                          <P class="my-3">PROJELENDİRME</P>
                          <div class="progress w-75">
                            <div
                              class="progress-bar progress-bar-striped bg-info"
                              role="progressbar"
                              style="width: 100%"
                              aria-valuenow="50"
                              aria-valuemin="0"
                              aria-valuemax="100"
                            >
                              <span
                                class="progress-bar-tooltip"
                                style="opacity: 1"
                              >
                                <strong class="vc_label_units"
                                  >100%</strong
                                ></span
                              >
                            </div>
                          </div>

                          <P class="my-3">UYGULAMA </P>
                          <div class="progress w-75 my-2">
                            <div
                              class="progress-bar progress-bar-striped bg-info"
                              role="progressbar"
                              style="width: 100%"
                              aria-valuenow="50"
                              aria-valuemin="0"
                              aria-valuemax="100"
                            >
                              <span
                                class="progress-bar-tooltip"
                                style="opacity: 1"
                              >
                                <strong class="vc_label_units"
                                  >100%</strong
                                ></span
                              >
                            </div>
                          </div>
                          <P class="my-3">PROJE TAMAMLANDI </P>
                          <div class="progress w-75 my-2">
                            <div
                              class="progress-bar progress-bar-striped bg-info"
                              role="progressbar"
                              style="width: 100%"
                              aria-valuenow="50"
                              aria-valuemin="0"
                              aria-valuemax="100"
                            >
                              <span
                                class="progress-bar-tooltip"
                                style="opacity: 1"
                              >
                                <strong class="vc_label_units"
                                  >100%</strong
                                ></span
                              >
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-4 d-flex flex-wrap">
                      <div class="col-sm-12">
                        <h3 class="text-center">İLGİLİ GÖRSELLER</h3>
                      </div>

                      <div class="col-sm-6">
                        <div
                          class="
                            d-flex
                            align-items-center
                            justify-content-center
                            p-2
                          "
                        >
                          <img
                            height="200"
                            width="100%"
                            class="rounded resim1"
                            src="1"
                            alt=""
                            id="onbir"
                          />
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div
                          class="
                            d-flex
                            align-items-center
                            justify-content-center
                            p-2
                          "
                        >
                          <img
                            height="200"
                            width="100%"
                            class="rounded resim2"
                            id="oniki"
                            src="2"
                            alt=""
                          />
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div
                          class="
                            d-flex
                            align-items-center
                            justify-content-center
                            p-2
                          "
                        >
                          <img
                            height="200"
                            width="100%"
                            class="rounded resim3"
                            id="onuc"
                            src="3"
                            alt=""
                          />
                        </div>
                      </div>

                      <div class="col-sm-6">
                        <div
                          class="
                            d-flex
                            align-items-center
                            justify-content-center
                            p-2
                          "
                        >
                          <img
                            height="200"
                            width="100%"
                            class="rounded resim4"
                            id="ondort"
                            src="4"
                            alt=""
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  var butonresim = document.querySelectorAll(".hepsi");

  butonresim.forEach((element) => {
    var resim1 = element.dataset.resim1;
    var resim2 = element.dataset.resim2;
    var resim3 = element.dataset.resim3;
    var resim4 = element.dataset.resim4;

    var title = element.dataset.title;
    var description = element.dataset.description;
    var musteri = element.dataset.musteri;
    var projeyeri = element.dataset.projeyeri;
    var projetipi = element.dataset.projetipi;

    element.addEventListener("click", (e) => {
      var baslik = document.querySelector("#title");
      var content = document.querySelector("#content");
      var costumer = document.querySelector("#musteri");
      var place = document.querySelector("#projeyeri");
      var projetype = document.querySelector("#projetipi");
      baslik.innerHTML = title;
      content.innerHTML = description;
      costumer.innerHTML = musteri;
      place.innerHTML = projeyeri;
      projetype.innerHTML = projetipi;

      var resim1 = document.querySelector(".resim1");
      var resim2 = document.querySelector(".resim2");
      var resim3 = document.querySelector(".resim3");
      var resim4 = document.querySelector(".resim4");
      var resim5 = document.querySelector(".büyükresim");

      resim1.src = element.dataset.resim1;
      resim2.src = element.dataset.resim2;
      resim3.src = element.dataset.resim3;
      resim4.src = element.dataset.resim4;
      resim5.src = element.dataset.resim1;
      console.log("tiklandı");
    });
  });

  var onbir = document.getElementById("onbir");
  var oniki = document.getElementById("oniki");
  var onuc = document.getElementById("onuc");
  var ondort = document.getElementById("ondort");
  var onbes = document.getElementById("onbes");

  onbir.addEventListener("click", () => {
    onbes.src = onbir.src;
  });
  oniki.addEventListener("click", () => {
    onbes.src = oniki.src;
  });
  onuc.addEventListener("click", () => {
    onbes.src = onuc.src;
  });
  ondort.addEventListener("click", () => {
    onbes.src = ondort.src;
  });
</script>
