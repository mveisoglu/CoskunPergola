                d-flex
                flex-column
                align-items-center
                justify-content-center
                hepsi
              " data-title="<%=item.title%>" data-description="<%=item.content%>" data-musteri="<%=item.musteri%>"
                data-projeyeri="<%=item.projeYeri%>" data-projetipi="<%=item.projeTipi%>"
                data-resim1="<%=item.resimler.bir%>" data-resim2="<%=item.resimler.iki%>"
                data-resim3="<%=item.resimler.uc%>" data-resim4="<%=item.resimler.dort%>"
