<section class="contact-form">
  <h5 class="mt-3">iLETİŞİME GEÇİN</h5>

  <div class="contact-items mt-2">
    <a
      href="https://wa.me/905326784791"
      data-bs-toggle="tooltip"
      data-bs-placement="top"
      title="Whatsapp"
      target="_blank"
      ><i class="fab fa-whatsapp"></i
    ></a>
    <a
      href="tel:905326784791"
      data-bs-toggle="tooltip"
      data-bs-placement="top"
      title="Bizi Arayın"
      ><i class="fas fa-phone"></i
    ></a>
    <a
      href="mailto:coskunpergola@gmail.com"
      data-bs-toggle="tooltip"
      data-bs-placement="top"
      title="Bize Ulaşın"
      ><i class="fas fa-envelope"></i
    ></a>
  </div>

  <form
    id="my-form"
    target="my-response-iframe"
    action="<%=contact_form%>"
    method="POST"
  >
    <div class="mb-3">
      <input
        type="text"
        class="form-control form-control-sm"
        id="name"
        placeholder="Ad Soyad"
        autocomplete="off"
        required
        name="entry.2005620554"
      />
    </div>
    <div class="mb-3">
      <input
        type="email"
        class="form-control form-control-sm"
        id="email"
        placeholder="Eposta adresiniz"
        autocomplete="off"
        required
        name="entry.1045781291"
      />
    </div>
    <div class="mb-3">
      <input
        type="text"
        class="form-control form-control-sm"
        id="phone"
        placeholder="Telefon"
        autocomplete="off"
        required
        name="entry.1166974658"
      />
    </div>
    <div class="mb-3">
      <textarea
        class="form-control form-control-sm"
        placeholder="Mesajınız"
        id="message"
        name="entry.839337160"
      ></textarea>
    </div>
    <button type="submit" name="submit" class="btn btn-primary">
      <i class="fas fa-paper-plane"></i> Gönder
    </button>
    <!-- Alert Message -->
    <div class="col-lg-12" id="alertmsg" style="display: none">
      <div class="alert mt-2 p-2 rounded" style="background:#64bbe3">
        <strong>Teşekkürler </strong> ,mesajınız gönderildi.
      </div>
    </div>
  </form>
  <iframe class="invisible" id="my-response-iframe" name="my-response-iframe" height="1"></iframe>
  <!--
  <div class="project-info-buttons">
    <a href="#"><i class="fas fa-book"></i><br />Katalog</a>
  </div>
  -->
  <div >

    <img src="../img/logoPNG.png" alt="" width="70%">

  </div>

</section>
